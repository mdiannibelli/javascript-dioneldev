// Haz una funci√≥n que devuelva True o False si dos matrices son "similares" (si una de ellas puede ser obtenida de almenos un intercambio de un par de elementos).

function solution(a,b) {
  if(a.length !== b.length) return false
  const diffPositions = []
  for(let i = 0; i < a.length; i++) {
    if(a[i] !== b[i]) {
      diffPositions.push([a[i], b[i]])
    }
  }
  if(diffPositions.length === 0) return true
  if(diffPositions.length !== 2) return false
  return diffPositions[0][0] === diffPositions[1][1] && diffPositions[0][1] === diffPositions[1][0]
}

const a = [1,2,3]
const b = [2,1,3]
solution(a,b) // TRUE